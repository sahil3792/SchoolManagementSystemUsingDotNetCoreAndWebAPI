@model List<Student>


<partial name="Notification"></partial>

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">Add Student Grade</h5>
            <div class="card">
            <form>
                <table class="table ">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">StudentID</th>
                            <th scope="col">Full Name</th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.StudentId</th>
                                <td>@item.FirstName @item.MiddleName @item.LastName</td>
                                <td>
                                        <a asp-controller="Teacher" asp-action="AddGradeRecord" asp-route-id="@item.StudentId"><input type="button" value="Add Grade" class="btn btn-sm btn-outline-info m-1" /></a>

                                    <a @* asp-controller="Teacher" asp-action="AddAcademicPerformance" *@><input type="button" value="Academic Performance" class="btn btn-sm btn-light m-1" onclick="ViewModal" /></a>
                                    <a asp-controller="Teacher" asp-action="AddDiscplinaryRecord"><input type="button" value="Disciplinary" class="btn btn-sm btn-secondary m-1" /></a>
                                </td>



                            </tr>
                        }




                    </tbody>
                </table>
                
            </form>

        </div>
    </div>
</div>


    <!-- Button trigger modal -->
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" id="Displaymodal">
        Launch demo modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <script src="~/ajax/doc.js"></script>
</div>

